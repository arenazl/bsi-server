# BSI Server Configuration Template
# Copy this file to .env and fill in your actual values
# ⚠️  NEVER commit .env with real credentials!

# Server Configuration
NODE_ENV=development
PORT=4000

# Database Principal (Main Database)
DB_PRIMARY_HOST=your-database-host
DB_PRIMARY_USER=your-db-username
DB_PRIMARY_PASSWORD=your-db-password
DB_PRIMARY_NAME=your-db-name
DB_PRIMARY_PORT=3306
DB_PRIMARY_SSL_CA=./src/DB/crt/ca.pem

# Database Núcleo Local (Local Development)
DB_NUCLEO_HOST=localhost
DB_NUCLEO_USER=root
DB_NUCLEO_PASSWORD=your-local-password
DB_NUCLEO_NAME=ng
DB_NUCLEO_PORT=3306

# Database Núcleo Online (Production Núcleo)
DB_NUCLEO_ONLINE_HOST=your-online-db-host
DB_NUCLEO_ONLINE_USER=your-online-db-user
DB_NUCLEO_ONLINE_PASSWORD=your-online-db-password
DB_NUCLEO_ONLINE_NAME=ng
DB_NUCLEO_ONLINE_PORT=3306
DB_NUCLEO_ONLINE_SSL_CA=./src/DB/crt/ca.pem

# JWT Configuration (Generate strong secrets!)
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters
JWT_REFRESH_SECRET=your-super-secret-refresh-key-at-least-32-characters
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# External API Tokens
META_API_TOKEN=your-meta-api-token-here
OPENAI_API_KEY=your-openai-api-key-here

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_BUCKET_NAME=your-s3-bucket-name
AWS_REGION=sa-east-1

# Email Configuration
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-gmail-app-password
EMAIL_FROM=BSI System <noreply@yourdomain.com>
ADMIN_EMAIL=admin@yourdomain.com
CONTROL_EMAIL=control@yourdomain.com

# Logging
LOG_LEVEL=debug
LOG_DIR=./logs

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
CORS_ORIGIN=http://localhost:4200
BCRYPT_ROUNDS=10

# Features
ENABLE_SWAGGER=true
ENABLE_AUDIT=true
ENABLE_RATE_LIMIT=true

# Optional: Monitoring & External Services
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-newrelic-key
AUDIT_WEBHOOK_URL=your-audit-webhook-url