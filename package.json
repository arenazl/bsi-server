{
  "name": "bsi-server",
  "version": "2.0.0",
  "description": "BSI Professional API Server",
  "main": "index.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "nodemon",
    "dev:fast": "nodemon --exec 'ts-node -T -r tsconfig-paths/register' ./src/server.ts",
    "build": "rimraf ./build && tsc",
    "start": "node ./build/server.js",
    "start:prod": "NODE_ENV=production node ./build/server.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install"
  },
  "keywords": [
    "api",
    "typescript",
    "express",
    "swagger"
  ],
  "author": "BSI Team",
  "license": "MIT",
  "dependencies": {
    "@types/module-alias": "^2.0.4",
    "aws-sdk": "^2.1185.0",
    "axios": "^1.7.7",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.9.7",
    "nodemailer": "^6.9.8",
    "openai": "^4.68.1",
    "read-excel-file": "^5.8.8",
    "sharp": "^0.33.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "xlsx": "^0.18.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.5",
    "@types/nodemailer": "^6.4.14",
    "@types/qrcode-terminal": "^0.12.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "exec": "ts-node -r tsconfig-paths/register ./src/server.ts"
  },
  "_moduleAliases": {
    "@config": "src/config",
    "@controllers": "src/controllers",
    "@services": "src/services",
    "@middleware": "src/middleware",
    "@models": "src/models",
    "@routes": "src/routes",
    "@routes-v2": "src/routes-v2",
    "@controllers-v2": "src/controllers-v2",
    "@services-v2": "src/services-v2",
    "@utils": "src/utils",
    "@types": "src/types",
    "@validators": "src/validators",
    "@repositories": "src/repositories",
    "@constants": "src/constants"
  }
}
